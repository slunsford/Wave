<footer class="post-footer">
    {{#if og_description}}
    <a class="button-text post-footer-more" href="{{url}}">
        <i class="icon icon-chevron-right"></i>
        Show Notes
    </a>
        <a class="button button-small button-secondary post-footer-download"
            href="{{og_description}}" target="_blank" rel="noopener noreferrer">
            <i class="icon icon-download"></i>
        </a>
    {{else}}
        <a class="button-text post-footer-more" href="{{url}}">
            <i class="icon icon-chevron-right"></i>
            Read More
        </a>
    {{/if}}
</footer>